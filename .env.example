# Candlestick Alert System - Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database (SQLite by default, can use PostgreSQL)
DATABASE_URL=sqlite:///candlestick_alerts.db

# SMTP Email Configuration (for email notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Optional: OpenAI API for LLM analysis
OPENAI_API_KEY=your_openai_api_key

# Notification Settings
ALERT_EMAIL=your-email@example.com
ENABLE_EMAIL_ALERTS=false

# Data Source Configuration
USE_MOCK_DATA=true

# Candlestick Alert System - Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Database (SQLite by default, can use PostgreSQL)
DATABASE_URL=sqlite:///candlestick_alerts.db

# EmailJS Configuration (for email notifications)
EMAILJS_USER_ID=your_emailjs_user_id
EMAILJS_SERVICE_ID=your_emailjs_service_id
EMAILJS_TEMPLATE_ID=your_emailjs_template_id

# Optional: OpenAI API for LLM analysis
OPENAI_API_KEY=your_openai_api_key

# Notification Settings
ALERT_EMAIL=your-email@example.com
ENABLE_EMAIL_ALERTS=false

# Data Source Configuration
USE_MOCK_DATA=true
